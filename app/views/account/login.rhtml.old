<% content_for :header_tags do %>
<%=stylesheet_link_tag 'anguniv', :plugin => 'redmine_clruniv' %>

<style type="text/css">
  body {
    color: yellow;
    background-color: #d8da3d } 


#in-cell{
background-color: #CCC
}


#out-cell{

background-color: #555 }

#out, #in{
opacity:0;
transition:opacity 2s linear;
}

#out:hover, #in:hover{
opacity:1;
}

</style>

<% end %>

<!--modification depuis version 0.2.1-->
<center>
  <table>
<th>
<h3>Membre de l'Université d'Angers</h3>
</th>
<th>
<h3><%= l(:clruniv_local_auth)%></h3>
</th>

	<tr><td id="in-cell">
        <!--debut du bloc CAS -->
        <% Cas.find(:all).each do |cas| %>
               
	<!--Debut block local -->
<div id="in">
            	 <%= link_to l(:button_login),{
			:controller => 'sso', 
			:action => 'login',
			:cas_id => "#{cas.identifier}", 
			:back_url => params[:back_url]
			}%>
                </div>
	<% end %>
        <!-- fin du bloc CAS -->
        <!-- début du bloc Externe -->	 
</td>

<td id="out-cell">

 <!--Debut du formulaire -->
<div id="out">
  <% form_tag({:action => "login"}) do %>
                <%= back_url_hidden_field_tag %>

                <% field_set_tag do %>
                        <p>
                        <%= label_tag "#{l(:field_login)}" %>
                        <%= text_field_tag 'username', nil %>
                        </p>
                        <p>
                        <%= label_tag "#{l(:field_password)}" %>
                        <%= password_field_tag 'password', nil %>
                        </p>
                  <!--Autologin Option -->
                  <% if Setting.autologin? %>
                        <%= check_box_tag 'autologin' %> <%= l(:label_stay_logged_in) %>
                  <% end %>
                  <button type="submit" name="login"><%=l(:button_login) %></button>

                <!-- End field_set_tag-->
                <% end %>
           <!-- End Form TAG -->
		<%= javascript_tag "Form.Element.focus('username');" %>
          <% end %>
	</div>
                <!-- register & lost password link -->
<tr><td>
    <ul id="authlink"><li>
      <%= link_to l(:clruniv_register), :controller => 'account', :action => 'register' %>
                      </li>
    <% if Setting.lost_password? %><li>
      <%= link_to l(:label_password_lost), :controller => 'account', :action => 'lost_password' %>
                      </li>
    <% end %>
    </ul></tr>

</td>
</tr>
</table>
</center>          
